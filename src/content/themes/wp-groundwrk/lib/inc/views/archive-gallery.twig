<article class="type-page status-publish entry" itemscope="itemscope" itemtype="http://schema.org/CreativeWork">
<div class="galleries entry-content">
	{% for gallery in galleries %}
		<div class="gallery">
			<div class="gallery-content">
				<h2><a href="/gallery/{{gallery.slug}}">{{gallery.post_title}}</a></h2>
				<p>{{gallery.post_content|excerpt(30)}}</p>
				{% for image in gallery.get_field('wpgw_gallery') %}
					<a class="fancybox" rel="group" href="{{image.sizes.large}}"><img src="{{image.sizes.thumbnail}}" alt="" /></a>
				{% endfor %}
			</div>
		</div>
	{% endfor %}

	<div class="wrapper-pagination">
		<ul class="pagination">
		    {% if pagination.prev %}
		        <li><a href="{{pagination.prev.link}}" class="prev {{pagination.prev.link|length ? '' : 'invisible'}}">&laquo;</a></li>
		    {% else %}
				<li class="disabled"><a href="">&laquo;</a></li>
		    {% endif %}
		        {% for page in pagination.pages %}
	                {% if page.link %}
	                   <li><a href="{{page.link}}" class="{{page.class}}">{{page.title}} <span class="sr-only">(current)</span></a></li>
	                {% else %}
	                    <li class="active"><a href="#" class="{{page.class}}">{{page.title}}</a></li>
	                {% endif %}
		        {% endfor %}
		    {% if pagination.next %}
		     <li><a href="{{pagination.next.link}}" class="next {{pagination.next.link|length ? '' : 'invisible'}}">&raquo;</a></li>
		    {% else %}
				<li class="disabled"><a href="">&raquo;</a></li>
		    {% endif %}
		</ul>
	</div>

</div>
</article>